            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>plugin-distribucion-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>plugin-distribucion-mock</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>plugin-distribucion-goib</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>plugin-postproceso-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>plugin-postproceso-mock</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
