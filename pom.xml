            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>plugin-justificante-caib</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>plugin-justificante-mock</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!-- ======== SIR =========== -->
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>regweb3-sir-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
                <artifactId>regweb3-sir-api</artifactId>
                <version>${project.version}</version>
                <type>ejb</type>
            </dependency>
            <dependency>
                <groupId>es.caib.regweb3</groupId>
