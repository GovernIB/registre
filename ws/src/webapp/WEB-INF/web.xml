<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>REGWEB3 WS SERVER</display-name>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>api-externa</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>RWE_WS_ENTRADA</role-name>
            <role-name>RWE_WS_SALIDA</role-name>
            <role-name>RWE_WS_CIUDADANO</role-name>
            <role-name>RWE_USUARI</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>KEYCLOAK</auth-method>
        <realm-name>Govern de les Illes Balears</realm-name>
    </login-config>

    <security-role>
        <description>Rol WS para operar con Registros de Entrada</description>
        <role-name>RWE_WS_ENTRADA</role-name>
    </security-role>

    <security-role>
        <description>Rol WS para operar con Registros de Salida</description>
        <role-name>RWE_WS_SALIDA</role-name>
    </security-role>

    <security-role>
        <description>Rol WS para operar con Registros de un ciudadano</description>
        <role-name>RWE_WS_CIUDADANO</role-name>
    </security-role>

    <security-role>
        <description>Rol (antiguo) WS para operar con Registros de Entrada y Salida</description>
        <role-name>RWE_USUARI</role-name>
    </security-role>

</web-app>
