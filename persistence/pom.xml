            <groupId>org.fundaciobit.pluginsib.scanweb</groupId>
            <artifactId>pluginsib-scanweb-api</artifactId>
            <version>${scanweb.api.version}</version>
            <scope>provided</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.fundaciobit.pluginsib.documentcustody</groupId>
                    <artifactId>pluginsib-documentcustody-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- ======== Plugin DocumentCustody ArxiuCaib =========== -->
        <dependency>
            <groupId>org.fundaciobit.pluginsib.documentcustody</groupId>
            <artifactId>pluginsib-documentcustody-arxiudigitalcaib</artifactId>
            <version>${plugin-documentcustody-arxiudigitalcaib.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- ===== PLUGINS DE VALIDACIO/INFORMACIO DE FIRMES ===== -->
