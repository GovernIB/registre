        </dependency>

        <dependency>
            <groupId>es.caib.regweb3</groupId>
            <artifactId>regweb3-sir-core</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- Plugin DocumentCustody -->
        <dependency>
            <groupId>org.fundaciobit.pluginsib.documentcustody</groupId>
            <artifactId>pluginsib-documentcustody-api</artifactId>
            <version>${documentcustody.api.version}</version>
            <scope>provided</scope>
        </dependency>

        <!--  PLUGINS DE USERINFORMATION  -->
        <dependency>
            <groupId>org.fundaciobit.pluginsib.userinformation</groupId>
            <artifactId>pluginsib-userinformation-api</artifactId>
            <version>${pluginsib.userinformation.api.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- ======== API DE PLUGIN DE SCANWEB =========== -->
